# Application Settings
APP_NAME="Find a Truck Driver API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# CORS Settings (Frontend URLs)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Supabase Configuration
SUPABASE_URL="https://your-project-id.supabase.co"

# New Supabase Keys (preferred - non-JWT based)
SUPABASE_PUBLISHABLE_KEY="sb_publishable_..."  # Frontend safe - low privileges, RLS enforced
SUPABASE_SECRET_KEY="sb_secret_..."            # Backend only - bypasses RLS (NEVER expose)

# Legacy Supabase Keys (JWT-based - still supported)
# If using legacy keys, uncomment these and comment out the new keys above:
# SUPABASE_ANON_KEY="eyJhbGc..."               # Equivalent to PUBLISHABLE_KEY
# SUPABASE_SERVICE_ROLE_KEY="eyJhbGc..."      # Equivalent to SECRET_KEY

# Database Direct Connection (optional - for migrations, admin tasks)
DATABASE_URL="postgresql://postgres:[password]@db.your-project-id.supabase.co:5432/postgres"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# JWT Configuration
JWT_SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Phone OTP Configuration (Supabase handles this, but keep for reference)
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# SMS Provider (if using Twilio instead of Supabase built-in)
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Location Settings
LOCATION_UPDATE_INTERVAL_SECONDS=60
LOCATION_FUZZ_ROLLING_MILES=2.0
LOCATION_FUZZ_WAITING_MILES=1.0
LOCATION_FUZZ_PARKED_MILES=0.5
LOCATION_MAX_AGE_MINUTES=30

# Geohash Settings
GEOHASH_PRECISION_REGION=2
GEOHASH_PRECISION_CLUSTER=4
GEOHASH_PRECISION_METRO=6
GEOHASH_PRECISION_LOCAL=8

# Hotspot Detection
HOTSPOT_MIN_WAITING_DRIVERS=10
HOTSPOT_RADIUS_MILES=0.5
HOTSPOT_UPDATE_INTERVAL_MINUTES=15

# Stats & Caching
STATS_CACHE_TTL_SECONDS=60
CLUSTER_CACHE_TTL_SECONDS=60
FACILITY_CACHE_TTL_SECONDS=60

# Rate Limiting
RATE_LIMIT_OTP_REQUESTS_PER_HOUR=5
RATE_LIMIT_LOCATION_UPDATES_PER_MINUTE=2
RATE_LIMIT_API_REQUESTS_PER_MINUTE=100

# Monitoring & Error Tracking
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"
SENTRY_TRACES_SAMPLE_RATE=0.1

# Background Jobs (when implemented)
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# Feature Flags
FEATURE_AUTO_STATUS_DETECTION=True
FEATURE_HOTSPOT_DETECTION=True
FEATURE_PUSH_NOTIFICATIONS=False
